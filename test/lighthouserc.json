{
  "ci": {
    "collect": {
      "numberOfRuns": 3,
      "staticDistDir": ".",
      "url": ["http://localhost:8000/"],
      "settings": {
        "chromeFlags": [
          "--no-sandbox",
          "--disable-setuid-sandbox", 
          "--disable-dev-shm-usage",
          "--headless=new"
        ]
      }
    },
    "assert": {
      "assertions": {
        "categories:performance": ["error", {"minScore": 0.5}],
        "categories:accessibility": ["error", {"minScore": 0.9}],
        "categories:seo": ["error", {"minScore": 0.9}]
      }
    }
  }
}